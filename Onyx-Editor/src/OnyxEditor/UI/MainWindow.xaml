<Window x:Class="OnyxEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnyxEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1920"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" KeyDown="Window_KeyDown" Loaded="Window_Loaded" MouseMove="Window_MouseMove" KeyUp="Window_KeyUp" Closing="Window_Closing" MouseDown="Window_MouseDown" MouseUp="Window_MouseUp"
        >



    <Grid  Background="#FF474747">

        <Grid.RowDefinitions>
            <RowDefinition Height="18" />
            <RowDefinition Height="30" />
            <RowDefinition Height="1000" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.3*" />
            <ColumnDefinition Width="1280" />
            <ColumnDefinition Width="3.3*" />
        </Grid.ColumnDefinitions>

        <Menu DockPanel.Dock="Top"  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="MenuItem_New_Click"/>
                <MenuItem Header="_Open..." Click="MenuItem_Open_Click"/>
                <MenuItem Header="_Save" Click="MenuItem_Save_Click"/>
                <MenuItem Header="_Save As..." Click="MenuItem_SaveAs_Click"/>
                <MenuItem Header="_Close" Click="MenuItem_Close_Click"/>
            </MenuItem>
        </Menu>

        <WrapPanel  Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
            <Button Style="{DynamicResource Round}" Margin="5" Content="Transform" Width="65"/>
            <Button Style="{DynamicResource Round}" Margin="5" Content="Rotate" Width="65"/>
            <Button Style="{DynamicResource Round}" Margin="5" Content="Scale" Width="65"/>
  
        </WrapPanel>

        <WrapPanel  Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
            <Button Style="{DynamicResource Round}" Margin="5" Content="Play" Width="40"/>
            <Button Style="{DynamicResource Round}" Margin="5" Content="Stop" Width="40"/>
        </WrapPanel>

        <StackPanel Background="#FF474747" Grid.Row="3" Grid.Column="0">

            <!-- LTRB-->
            <TreeView Background="#FF474747" Margin="10,10,0,13" Name="TreeView1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="295" Height="487">
                <TreeViewItem Foreground="#FFCDCDCD" Header="Entities">
                    <TreeViewItem Foreground="#FFCDCDCD" Header="Coke">
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Pepsi"></TreeViewItem>
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Orange Juice"></TreeViewItem>
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Milk"></TreeViewItem>
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Iced Tea"></TreeViewItem>
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Mango Shake"></TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Foreground="#FFCDCDCD" Header="Pepsi"></TreeViewItem>
                    <TreeViewItem Foreground="#FFCDCDCD" Header="Orange Juice"></TreeViewItem>
                    <TreeViewItem Foreground="#FFCDCDCD" Header="Milk">
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Pepsi"></TreeViewItem>
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Orange Juice"></TreeViewItem>
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Milk"></TreeViewItem>
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Iced Tea"></TreeViewItem>
                        <TreeViewItem Foreground="#FFCDCDCD" Header="Mango Shake"></TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Foreground="#FFCDCDCD" Header="Iced Tea"></TreeViewItem>
                    <TreeViewItem Foreground="#FFCDCDCD" Header="Mango Shake"></TreeViewItem>
                </TreeViewItem>
            </TreeView>
            
        </StackPanel>

        <StackPanel Background="#FF474747" Grid.Row="3" Grid.Column="3">

            <Label Height="23" Content="Position" Margin="0,0,00,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="120" Background="#FF0094FB"/>
            <TextBox x:Name="PositionTextboxX" TextAlignment="Center" Height="23" TextWrapping="Wrap" Margin="0,0,0,0" HorizontalAlignment="Left" Text="0.0" Width="120"/>
            <TextBox x:Name="PositionTextboxY" TextAlignment="Center" Height="23" TextWrapping="Wrap" Margin="0,0,0,0" HorizontalAlignment="Left" Text="0.0" Width="120"/>
            <TextBox x:Name="PositionTextboxZ" TextAlignment="Center" Height="23" TextWrapping="Wrap" Margin="0,0,0,0" HorizontalAlignment="Left" Text="0.0" Width="120"/>


        </StackPanel>



        <local:Viewport Grid.Row="3" Grid.Column="1" x:Name="ViewportMain" MouseDown="ViewportMain_MouseDown" HorizontalAlignment="Left" Height="720" VerticalAlignment="Top" Width="1280" ClipToBounds="True" Background="#FF5F5F5F" MouseUp="ViewportMain_MouseUp"/>

        
        
    </Grid>
</Window>
    